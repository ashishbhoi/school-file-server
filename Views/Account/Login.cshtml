@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Login</h1>
            <p class="text-gray-600">Sign in to upload and manage files</p>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post" class="space-y-6">
            <input type="hidden" asp-for="ReturnUrl"/>

            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-2">Username</label>
                <input asp-for="Username" type="text"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg touch-target"
                       placeholder="Enter your username" autocomplete="username"/>
                <span asp-validation-for="Username" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                <input asp-for="Password" type="password"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg touch-target"
                       placeholder="Enter your password" autocomplete="current-password"/>
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex items-center">
                <input asp-for="RememberMe" type="checkbox"
                       class="h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500 touch-target"/>
                <label asp-for="RememberMe" class="ml-3 text-sm text-gray-700">Remember me for 30 days</label>
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg font-medium text-lg touch-target touch-manipulation transition-colors">
                Sign In
            </button>
        </form>

        <div class="mt-6 text-center">
            <a asp-controller="Home" asp-action="Index" class="text-blue-600 hover:text-blue-800 text-sm">
                ‚Üê Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
