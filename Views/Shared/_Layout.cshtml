<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - School File Server</title>
    <link rel="stylesheet" href="~/css/tailwind.css"/>
</head>
<body class="bg-gray-50 min-h-screen">
<nav class="bg-blue-600 shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between h-16">
            <div class="flex items-center">
                <a asp-controller="Home" asp-action="Index"
                   class="flex items-center space-x-2 text-white hover:text-blue-200 transition-colors">
                    <span class="text-2xl">ðŸ“š</span>
                    <span class="text-xl font-bold">School File Server</span>
                </a>
            </div>

            <div class="flex items-center space-x-4">
                <a asp-controller="File" asp-action="Browse"
                   class="text-white hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium touch-target touch-manipulation flex items-center justify-center text-center">
                    Browse Files
                </a>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                    {
                        <a asp-controller="File" asp-action="Upload"
                           class="bg-blue-500 hover:bg-blue-400 text-white px-4 py-2 rounded-lg text-sm font-medium touch-target touch-manipulation flex items-center justify-center text-center">
                            Upload File
                        </a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Home" asp-action="Admin"
                           class="text-white hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium touch-target touch-manipulation flex items-center justify-center text-center">
                            Admin
                        </a>
                    }

                    <div class="relative group">
                        <button
                            class="text-white hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium touch-target touch-manipulation flex items-center">
                            ðŸ‘¤ @User.Identity.Name
                            <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                      clip-rule="evenodd"/>
                            </svg>
                        </button>
                        <div
                            class="absolute right-0 w-48 mt-2 bg-white rounded-md shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-50">
                            <div class="py-1">
                                <a asp-controller="Account" asp-action="Logout"
                                   class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 touch-target touch-manipulation items-center">
                                    Logout
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login"
                       class="bg-blue-500 hover:bg-blue-400 text-white px-4 py-2 rounded-lg text-sm font-medium touch-target touch-manipulation flex items-center justify-center text-center">
                        Login
                    </a>
                }
            </div>
        </div>
    </div>
</nav>

<main class="max-w-7xl mx-auto px-4 py-6">
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["Error"]
        </div>
    }

    @RenderBody()
</main>

<footer class="bg-gray-800 text-white py-8 mt-12">
    <div class="max-w-7xl mx-auto px-4 text-center">
        <p>&copy; 2025 School File Server. All rights reserved.</p>
        <p class="text-sm text-gray-400 mt-2">Designed for offline school intranet use</p>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
