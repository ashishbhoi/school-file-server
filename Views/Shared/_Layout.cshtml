<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - School File Server</title>
    <link rel="stylesheet" href="~/css/tailwind.css"/>
</head>
<body class="bg-gray-50 min-h-screen">
<nav class="bg-blue-600 shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
            <!-- Logo/Brand -->
            <div class="flex items-center">
                <a asp-controller="Home" asp-action="Index"
                   class="flex items-center space-x-2 text-white hover:text-blue-200 transition-colors">
                    <span class="text-2xl">üìö</span>
                    <span class="text-xl font-bold hidden sm:block">School File Server</span>
                    <span class="text-lg font-bold sm:hidden">SFS</span>
                </a>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button id="mobile-menu-button" type="button" 
                        class="text-white hover:text-blue-200 focus:outline-none focus:text-blue-200 transition-colors"
                        aria-label="Toggle menu">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex md:items-center md:space-x-4">
                <a asp-controller="File" asp-action="Browse"
                   class="text-white hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium transition-colors">
                    Browse Files
                </a>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                    {
                        <a asp-controller="File" asp-action="Upload"
                           class="bg-blue-500 hover:bg-blue-400 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                            Upload File
                        </a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Home" asp-action="Admin"
                           class="text-white hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium transition-colors">
                            Admin
                        </a>
                    }

                    <!-- Desktop User Menu -->
                    <div class="relative group">
                        <button
                            class="text-white hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium flex items-center transition-colors">
                            üë§ @User.Identity.Name
                            <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                      clip-rule="evenodd"/>
                            </svg>
                        </button>
                        <div
                            class="absolute right-0 w-48 mt-2 bg-white rounded-md shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-50">
                            <div class="py-1">
                                <a asp-controller="Account" asp-action="Logout"
                                   class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    Logout
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login"
                       class="bg-blue-500 hover:bg-blue-400 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                        Login
                    </a>
                }
            </div>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="md:hidden hidden bg-blue-700 border-t border-blue-500">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a asp-controller="File" asp-action="Browse"
                   class="block text-white hover:text-blue-200 hover:bg-blue-500 px-3 py-2 rounded-md text-base font-medium transition-colors touch-target">
                    üìÇ Browse Files
                </a>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                    {
                        <a asp-controller="File" asp-action="Upload"
                           class="block text-white hover:text-blue-200 hover:bg-blue-500 px-3 py-2 rounded-md text-base font-medium transition-colors touch-target">
                            ‚¨ÜÔ∏è Upload File
                        </a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Home" asp-action="Admin"
                           class="block text-white hover:text-blue-200 hover:bg-blue-500 px-3 py-2 rounded-md text-base font-medium transition-colors touch-target">
                            ‚öôÔ∏è Admin Dashboard
                        </a>
                    }

                    <!-- Mobile User Section -->
                    <div class="border-t border-blue-500 pt-3 mt-3">
                        <div class="px-3 py-2">
                            <div class="text-base font-medium text-white">üë§ @User.Identity.Name</div>
                            <div class="text-sm text-blue-200">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</div>
                        </div>
                        <a asp-controller="Account" asp-action="Logout"
                           class="block text-white hover:text-blue-200 hover:bg-blue-500 px-3 py-2 rounded-md text-base font-medium transition-colors touch-target">
                            üö™ Logout
                        </a>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login"
                       class="block bg-blue-500 hover:bg-blue-400 text-white px-3 py-2 rounded-md text-base font-medium transition-colors touch-target">
                        üîë Login
                    </a>
                }
            </div>
        </div>
    </div>
</nav>

<main class="max-w-7xl mx-auto px-4 py-6">
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["Error"]
        </div>
    }

    @RenderBody()
</main>

<footer class="bg-gray-800 text-white py-8 mt-12">
    <div class="max-w-7xl mx-auto px-4 text-center">
        <p>&copy; 2025 School File Server. All rights reserved.</p>
        <p class="text-sm text-gray-400 mt-2">Designed for offline school intranet use</p>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
<script src="~/js/site.js"></script>
</body>
</html>
