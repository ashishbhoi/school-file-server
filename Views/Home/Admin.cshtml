@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
        <div class="flex items-center">
            <div class="text-green-600 mr-3">‚úÖ</div>
            <div class="text-green-800 font-medium">@TempData["SuccessMessage"]</div>
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex items-center">
            <div class="text-red-600 mr-3">‚ùå</div>
            <div class="text-red-800 font-medium">@TempData["ErrorMessage"]</div>
        </div>
    </div>
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Admin Dashboard</h1>
    <p class="text-gray-600">Manage users, monitor system usage, and oversee file uploads</p>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
            <div class="text-3xl mr-4">üìÅ</div>
            <div>
                <h3 class="text-2xl font-bold text-gray-900">@Model.TotalFiles</h3>
                <p class="text-gray-600">Total Files</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
            <div class="text-3xl mr-4">üíæ</div>
            <div>
                <h3 class="text-2xl font-bold text-gray-900">@FileHelper.FormatFileSize(Model.TotalFileSize)</h3>
                <p class="text-gray-600">Storage Used</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
            <div class="text-3xl mr-4">üë•</div>
            <div>
                <h3 class="text-2xl font-bold text-gray-900">@Model.Teachers.Count</h3>
                <p class="text-gray-600">Teachers</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
            <div class="text-3xl mr-4">üéì</div>
            <div>
                <h3 class="text-2xl font-bold text-gray-900">@Model.Classes.Count</h3>
                <p class="text-gray-600">Active Classes</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
    <div class="flex flex-wrap gap-4 justify-center items-center">
        <a asp-controller="Account" asp-action="CreateUser"
           class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium touch-target touch-manipulation transition-colors">
            üë§ Create Teacher Account
        </a>

        <a asp-controller="Home" asp-action="CreateClass"
           class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium touch-target touch-manipulation transition-colors">
            üéì Create New Class
        </a>

        <a asp-controller="File" asp-action="Upload"
           class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium touch-target touch-manipulation transition-colors">
            ‚¨ÜÔ∏è Upload Files
        </a>

        <a asp-controller="File" asp-action="Browse"
           class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-medium touch-target touch-manipulation transition-colors">
            üìÇ Browse All Files
        </a>

        <a asp-controller="Account" asp-action="ManageUsers"
           class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-lg font-medium touch-target touch-manipulation transition-colors">
            ‚öôÔ∏è Manage Users
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Files -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold text-gray-900">Recent Files</h2>
            <a asp-controller="File" asp-action="Browse" class="text-blue-600 hover:text-blue-800 text-sm">View All</a>
        </div>

        @if (Model.RecentFiles.Any())
        {
            <!-- Scrollable container - shows 3 full items + partial 4th item -->
            <div class="overflow-y-auto scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-gray-100" 
                 style="max-height: 280px; scroll-behavior: smooth;">
                <div class="space-y-3 pr-2">
                    @foreach (var file in Model.RecentFiles)
                    {
                        <div class="flex items-center space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors duration-200 min-h-[72px]">
                            <div class="text-xl flex-shrink-0">@FileHelper.GetFileIcon(file.FileType)</div>
                            <div class="flex-1 min-w-0">
                                <a asp-controller="File" asp-action="View" asp-route-id="@file.FileId"
                                   class="font-medium text-gray-900 hover:text-blue-600 truncate block transition-colors duration-200">
                                    @file.FileName
                                </a>
                                <p class="text-sm text-gray-500 truncate">@file.Class - @file.Subject</p>
                                <p class="text-xs text-gray-400">
                                    @file.UploadDate.ToString("MMM dd, yyyy") ‚Ä¢
                                    @FileHelper.FormatFileSize(file.FileSize)
                                    @if (file.UploadedByUser != null)
                                    {
                                        <span> ‚Ä¢ @file.UploadedByUser.Username</span>
                                    }
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Scroll indicator for mobile -->
            <div class="md:hidden mt-2 text-center">
                <div class="text-xs text-gray-400">‚Üï Scroll to see more files</div>
            </div>
        }
        else
        {
            <p class="text-gray-500 text-center py-8">No files uploaded yet</p>
        }
    </div>

    <!-- Teachers Overview -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold text-gray-900">Teachers</h2>
            <a asp-controller="Account" asp-action="CreateUser" class="text-blue-600 hover:text-blue-800 text-sm">Add Teacher</a>
        </div>

        @if (Model.Teachers.Any())
        {
            <!-- Scrollable container - shows 3 full items + partial 4th item -->
            <div class="overflow-y-auto scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-gray-100" 
                 style="max-height: 280px; scroll-behavior: smooth;">
                <div class="space-y-3 pr-2">
                    @foreach (var teacher in Model.Teachers)
                    {
                        <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg transition-colors duration-200 min-h-[72px]">
                            <div class="flex items-center space-x-3 flex-1 min-w-0">
                                <div class="text-xl flex-shrink-0">üë§</div>
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-gray-900 truncate">@teacher.Username</p>
                                    <p class="text-sm text-gray-500 truncate">
                                        Created @teacher.CreatedDate.ToString("MMM dd, yyyy")
                                    </p>
                                </div>
                            </div>
                            <div class="text-sm text-gray-500 text-right flex-shrink-0 ml-2 max-w-[120px]">
                                @{
                                    var assignedClasses = System.Text.Json.JsonSerializer.Deserialize<string[]>(teacher.AssignedClasses);
                                    var classText = string.Join(", ", assignedClasses ?? new string[0]);
                                }
                                <span class="truncate block" title="@classText">@classText</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Scroll indicator and view all link -->
            <div class="mt-3 flex justify-between items-center">
                <div class="text-xs text-gray-400 md:hidden">‚Üï Scroll to see more teachers</div>
                @if (Model.Teachers.Count > 10)
                {
                    <div class="text-center flex-1 md:flex-none">
                        <a asp-controller="Account" asp-action="ManageUsers"
                           class="text-blue-600 hover:text-blue-800 text-sm transition-colors duration-200">
                            View all @Model.Teachers.Count teachers
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-8">
                <p class="text-gray-500 mb-4">No teachers created yet</p>
                <a asp-controller="Account" asp-action="CreateUser"
                   class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium touch-target touch-manipulation transition-colors duration-200">
                    Create First Teacher
                </a>
            </div>
        }
    </div>
</div>

<!-- Classes Overview -->
<div class="bg-white rounded-lg shadow-md p-6 mt-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-bold text-gray-900">Classes Management</h2>
        <a asp-controller="Home" asp-action="CreateClass" 
           class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium text-sm touch-target touch-manipulation transition-colors">
            üéì Add New Class
        </a>
    </div>

    @if (Model.Classes.Any())
    {
        <!-- Modern Grid Layout -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var schoolClass in Model.Classes)
            {
                <div class="bg-gray-50 rounded-xl p-6 hover:shadow-lg hover:bg-white border border-gray-200 transition-all duration-300 group">
                    <!-- Class Header -->
                    <div class="flex items-center space-x-3 mb-4">
                        <div class="bg-indigo-100 p-3 rounded-full group-hover:bg-indigo-200 transition-colors duration-300">
                            <span class="text-2xl">üéì</span>
                        </div>
                        <div class="flex-1">
                            <h3 class="font-bold text-xl text-gray-900 mb-1" title="@schoolClass.DisplayName">@schoolClass.DisplayName</h3>
                            <p class="text-sm text-gray-500">Class @schoolClass.ClassName</p>
                        </div>
                    </div>

                    <!-- Class Info -->
                    <div class="flex justify-between items-center mb-6">
                        <div>
                            <p class="text-sm text-gray-500">Sort Order</p>
                            <p class="font-medium text-gray-900">#@schoolClass.SortOrder</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm text-gray-500">Status</p>
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                ‚úì Active
                            </span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="space-y-3">
                        <!-- Primary Action -->
                        <a asp-controller="File" asp-action="Browse" asp-route-className="@schoolClass.ClassName"
                           class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-medium text-sm text-center block touch-target touch-manipulation transition-colors duration-200">
                            üìÇ Browse Files
                        </a>
                        
                        <!-- Secondary Actions -->
                        <div class="flex space-x-2">
                            <a asp-action="EditClass" asp-route-id="@schoolClass.ClassId"
                               class="flex-1 bg-green-100 hover:bg-green-200 text-green-800 py-2 px-3 rounded-lg font-medium text-xs text-center touch-target touch-manipulation transition-colors duration-200">
                                ‚úèÔ∏è Edit
                            </a>
                            <form asp-action="DeleteClass" method="post" class="flex-1" 
                                  onsubmit="return confirm('Are you sure you want to permanently delete this class? This action cannot be undone.');">
                                <input type="hidden" name="classId" value="@schoolClass.ClassId" />
                                <button type="submit" 
                                        class="w-full bg-red-100 hover:bg-red-200 text-red-800 py-2 px-3 rounded-lg font-medium text-xs touch-target touch-manipulation transition-colors duration-200">
                                    üóëÔ∏è Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Summary Footer -->
        @if (Model.Classes.Count > 4)
        {
            <div class="mt-6 pt-4 border-t border-gray-200">
                <div class="flex items-center justify-between text-sm text-gray-500">
                    <span>Showing @Model.Classes.Count active classes</span>
                    <div class="flex items-center space-x-4">
                        <span>üìä Total: @Model.Classes.Count</span>
                        <span>üìÅ Files: @Model.TotalFiles</span>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-16">
            <div class="bg-gray-100 rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-6">
                <span class="text-4xl">üéì</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No Classes Created Yet</h3>
            <p class="text-gray-500 mb-8 max-w-md mx-auto">Get started by creating your first class to organize files by grade level. Classes help teachers and students find relevant educational materials easily.</p>
            <a asp-controller="Home" asp-action="CreateClass"
               class="bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-3 rounded-lg font-medium touch-target touch-manipulation transition-colors duration-200">
                üéì Create Your First Class
            </a>
        </div>
    }
</div>
