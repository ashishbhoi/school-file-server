@model EditClassViewModel
@{
    ViewData["Title"] = "Edit Class";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Edit Class</h1>
    <p class="text-gray-600">Modify class information and settings</p>
</div>

<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
    <form asp-action="EditClass" method="post" class="space-y-6">
        <input type="hidden" asp-for="ClassId" />
        <input type="hidden" asp-for="OriginalClassName" />
        
        <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 border border-red-200 rounded-lg p-3 text-sm"></div>

        <div>
            <label asp-for="ClassName" class="block text-sm font-medium text-gray-700 mb-2">
                Class Name
            </label>
            <input asp-for="ClassName" 
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 touch-target"
                   placeholder="e.g., VI, VII, XII"
                   maxlength="10" />
            <span asp-validation-for="ClassName" class="text-red-600 text-sm"></span>
            @if (Model.FileCount > 0)
            {
                <p class="text-amber-600 text-xs mt-1">
                    ⚠️ Changing this will update @Model.FileCount file(s) and move the class directory
                </p>
            }
            else
            {
                <p class="text-gray-500 text-xs mt-1">Short identifier for the class (used in file paths)</p>
            }
        </div>

        <div>
            <label asp-for="DisplayName" class="block text-sm font-medium text-gray-700 mb-2">
                Display Name
            </label>
            <input asp-for="DisplayName" 
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 touch-target"
                   placeholder="e.g., Class VI, Grade 6, Sixth Grade"
                   maxlength="100" />
            <span asp-validation-for="DisplayName" class="text-red-600 text-sm"></span>
            <p class="text-gray-500 text-xs mt-1">Full name shown to users</p>
        </div>

        <div>
            <label asp-for="SortOrder" class="block text-sm font-medium text-gray-700 mb-2">
                Sort Order
            </label>
            <input asp-for="SortOrder" 
                   type="number" 
                   min="1" 
                   max="1000"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 touch-target" />
            <span asp-validation-for="SortOrder" class="text-red-600 text-sm"></span>
            <p class="text-gray-500 text-xs mt-1">Order in which this class appears in lists (lower numbers first)</p>
        </div>

        <div>
            <label class="flex items-center">
                <input asp-for="IsActive" 
                       type="checkbox" 
                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded touch-target" />
                <span class="ml-2 text-sm text-gray-700">Active</span>
            </label>
            <p class="text-gray-500 text-xs mt-1">Inactive classes are hidden from users but data is preserved</p>
        </div>

        <!-- Class Information -->
        <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2">📊 Class Information</h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                    <span class="text-gray-600">Files:</span>
                    <span class="font-medium">@Model.FileCount</span>
                </div>
                <div>
                    <span class="text-gray-600">Status:</span>
                    <span class="font-medium @(Model.IsActive ? "text-green-600" : "text-red-600")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
        </div>

        <div class="flex space-x-4">
            <button type="submit" 
                    class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg font-medium touch-target touch-manipulation transition-colors">
                💾 Update Class
            </button>
            <a asp-action="Admin" 
               class="flex-1 bg-gray-500 hover:bg-gray-600 text-white py-3 px-4 rounded-lg font-medium text-center touch-target touch-manipulation transition-colors">
                Cancel
            </a>
        </div>
    </form>
</div>

@if (Model.FileCount > 0)
{
    <div class="mt-8 max-w-md mx-auto">
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
            <h3 class="font-medium text-amber-900 mb-2">⚠️ Important Notes</h3>
            <ul class="text-sm text-amber-800 space-y-1">
                <li>• This class contains @Model.FileCount file(s)</li>
                <li>• Changing the class name will update all file records</li>
                <li>• The class directory will be moved automatically</li>
                <li>• This operation cannot be undone</li>
            </ul>
        </div>
    </div>
}
else
{
    <div class="mt-8 max-w-md mx-auto">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <h3 class="font-medium text-blue-900 mb-2">💡 Tips for Editing Classes</h3>
            <ul class="text-sm text-blue-800 space-y-1">
                <li>• This class has no files, so changes are safe</li>
                <li>• Use short, clear names for class identifiers</li>
                <li>• Display names can be more descriptive</li>
                <li>• Sort order determines the display sequence in menus</li>
            </ul>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
